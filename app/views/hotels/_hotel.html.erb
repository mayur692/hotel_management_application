<div id="<%= dom_id hotel %>" class="container my-4">
  <div class="card bg-dark text-light shadow-lg p-4" style="border-radius: 1rem;">
    <h3 class="card-title text-primary text-center mb-3">Hotel Details</h3>

    <p class="mb-2">
      <strong class="text-secondary">Name:</strong>
      <span class="text-light"><%= hotel.name %></span>
    </p>

    <p class="mb-2">
      <strong class="text-secondary">Address:</strong>
      <span class="text-light"><%= hotel.address %></span>
    </p>
  </div>
</div>
